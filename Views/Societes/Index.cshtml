@model IEnumerable<BookingBus.Models.Abonnement>

@{
    ViewBag.Title = "Index";
}
<div class="container">
 
    <div class="row justify-content-center">

        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                    <div class="card-icon col-xs-6" style="text-align:center">
                        <h3 class="card-category ">Abonnements</h3>
                        <img src="~/Content/rating.png" style="width:50%;" />
                    </div>
                </div>
                <div class="card-footer">
                    <div class="stats" style="text-align:center">
                         @Html.ActionLink("Liste des abonnements", "lister", new { role = "abonnement" }, "")
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                    <div class="card-icon col-xs-6" style="text-align:center">
                        <h3 class="card-category ">Bus</h3>
                        <img src="~/Content/bus.png" style="width:50%;" />
                    </div>
                </div>
                <div class="card-footer">
                    <div class="stats" style="text-align:center">
                        @Html.ActionLink("Liste des Bus", "lister", new { role = "bus" }, "")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                    <div class="card-icon col-xs-6" style="text-align:center">
                        <h3 class="card-category ">Demandes</h3>
                        <img src="~/Content/request.png" style="width:50%;" />
                    </div>
                </div>
                <div class="card-footer">
                    <div class="stats" style="text-align:center">
                        @Html.ActionLink("consulter les demandes", "consulter")
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

