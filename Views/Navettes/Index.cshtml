@model IEnumerable<BookingBus.Models.Navette>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lieu_depart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lieu_arriver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_depart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_arriver)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.lieu_depart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lieu_arriver)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_depart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_arriver)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id_navette }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id_navette }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id_navette })
                </td>
            </tr>
        }

    </table>
</div>