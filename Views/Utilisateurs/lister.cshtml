@model IEnumerable<BookingBus.Models.Utilisateur>

@{
    ViewBag.Title = "lister";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>lister</h2>

<p>
    @Html.ActionLink("back", "Index","Admins")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom_complet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mdp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.role)
        </th>
        <th hidden>
            @Html.DisplayNameFor(model => model.Admin.id_utilisateur)
        </th>
        <th hidden>
            @Html.DisplayNameFor(model => model.Client.id_utilisateur)
        </th>
        @if (ViewBag.role == "societe")
        {
            <th>
                @Html.DisplayNameFor(model => model.Societe.lieu)
            </th>
}
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nom_complet)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.mail)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.mdp)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.telephone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.role)
    </td>
    <td hidden>
        @Html.DisplayFor(modelItem => item.Admin.id_utilisateur)
    </td>
    <td hidden>
        @Html.DisplayFor(modelItem => item.Client.id_utilisateur)
    </td>
    @if (ViewBag.role == "societe")
    {
        <td>
            @Html.DisplayFor(modelItem => item.Societe.lieu)
        </td>
    }

    <td>
       
        @Html.ActionLink("Delete", "Delete", new { id = item.id_utilisateur })
    </td>
</tr>
}

</table>
