@model BookingBus.Models.Utilisateur

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create","Utilisateurs",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="~/Content/BookingBus.png" id="icon" alt="User Icon" />
            </div>

            <!-- Login Form -->
            <form>
                <input type="text" id="login" class="fadeIn second" name="nom_complet" placeholder="Nom Complet">
                <input type="text" id="password" class="fadeIn third" name="mail" placeholder="E-mail">
                <input type="password" id="login" class="fadeIn second" name="mdp" placeholder="Mot de passe">
                <input type="password" id="password" class="fadeIn third" placeholder="Mot de passe">
                <input type="text" id="login" class="fadeIn second" name="telephone" placeholder="06-XX-XX-XX-XX">
                @if (ViewBag.role.Equals("societe"))
                {
                    <input type="text" id="login" class="fadeIn second" name="lieu" placeholder="Lieu">
                }
                <input type="file" name="imagefile" class="fadeIn second" />
                <input hidden name="role" value="@ViewBag.role" />
                <input type="submit" class="fadeIn fourth" value="S'inscrire" style="background-color: #F59A2E">

            </form>

            <!-- Remind Passowrd -->

        </div>
    </div>
}
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
