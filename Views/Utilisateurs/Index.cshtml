        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nom_complet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mdp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admin.id_utilisateur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.id_utilisateur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Societe.lieu)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id_utilisateur }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id_utilisateur }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id_utilisateur })
                </td>
            </tr>
        }

    </table>
</div>