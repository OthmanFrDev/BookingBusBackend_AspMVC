@model BookingBus.Models.Utilisateur

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="wrapper fadeInDown">
    <div id="formContent">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_utilisateur)


        @Html.LabelFor(model => model.nom_complet, htmlAttributes: new { @class = "badge badge-warning w-25 fadeIn first " })
        <br />
        @Html.EditorFor(model => model.nom_complet, new { htmlAttributes = new { @class = " fadeIn first" } })<br />
        @Html.ValidationMessageFor(model => model.nom_complet, "", new { @class = "text-danger" })



        @Html.LabelFor(model => model.mail, htmlAttributes: new { @class = " badge badge-warning w-25 fadeIn first" })<br />

        @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "fadeIn first" } })<br />
        @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })


        @Html.LabelFor(model => model.mdp, htmlAttributes: new { @class = "badge badge-warning w-25 fadeIn first" })<br />

        @Html.EditorFor(model => model.mdp, new { htmlAttributes = new { @class = "fadeIn first" } })<br />
        @Html.ValidationMessageFor(model => model.mdp, "", new { @class = "text-danger" })



        @Html.LabelFor(model => model.telephone, htmlAttributes: new { @class = "badge badge-warning w-25 fadeIn first" })<br />

        @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @class = "fadeIn first" } })<br />
        @Html.ValidationMessageFor(model => model.telephone, "", new { @class = "text-danger" })

        <div hidden class="form-group">
            @Html.LabelFor(model => model.role, htmlAttributes: new { @class = "badge badge-warning w-25 fadeIn first" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.role, new { htmlAttributes = new { @class = "fadeIn first" } })
                @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="file" name="imagefile" class="fadeIn second" />
        @if (ViewBag.role != null)
        {
            if (ViewBag.role == "societe")
            {
                <br />
                <input type="text" class="fadeIn first" name="lieu" value="@ViewBag.lieu">

            }
        }

        <br />

        <input type="submit" class="fadeIn fourth" value="modifier" style="background-color: #F59A2E" />


    </div>
</div>
}

