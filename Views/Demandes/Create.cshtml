@model BookingBus.Models.Demande

@{
    ViewBag.Title = "Create";
}

<h3>Créer une demande</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <form>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.depart, htmlAttributes: new { @class = "fadeIn second" })<br />
                @Html.EditorFor(model => model.depart, new { htmlAttributes = new { @class = "fadeIn second" } })<br />
                @Html.ValidationMessageFor(model => model.depart, "", new { @class = "fadeIn second" })<br />

                @Html.LabelFor(model => model.arriver, htmlAttributes: new { @class = "fadeIn second" })<br />
                @Html.EditorFor(model => model.arriver, new { htmlAttributes = new { @class = "fadeIn second" } })<br />
                @Html.ValidationMessageFor(model => model.arriver, "", new { @class = "fadeIn second" })<br />

                @Html.LabelFor(model => model.date_depart, htmlAttributes: new { @class = "fadeIn second" })<br />
                @Html.EditorFor(model => model.date_depart, new { htmlAttributes = new { @type="time",@class = "fadeIn second" } })<br />
                @Html.ValidationMessageFor(model => model.date_depart, "", new { @class = "fadeIn second" })<br />
                
                @Html.LabelFor(model => model.date_arriver, htmlAttributes: new { @class = "fadeIn second" })<br />
                @Html.EditorFor(model => model.date_arriver, new { htmlAttributes = new { @type = "time",@class = "fadeIn second" } })<br />
                @Html.ValidationMessageFor(model => model.date_arriver, "", new { @class = "fadeIn second" })<br />
                <div hidden>
                    @Html.LabelFor(model => model.id_client, "id_client", htmlAttributes: new { @class = "fadeIn second" })
                    <input name="id_client" hidden type="number" value="@ViewBag.id" />
                    @Html.ValidationMessageFor(model => model.id_client, "", new { @class = "fadeIn second" })
                </div>
                <input type="submit" value="Envoyer" class="btn"  style="background-color: #F59A2E" />
            </form>
        </div>
    </div>
}
            <script src="~/Scripts/jquery-3.4.1.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
