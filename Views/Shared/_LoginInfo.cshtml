
@if (Session["UserID"] != null)
{
    using (Html.BeginForm("logout", "Utilisateurs", FormMethod.Post, new { id = "logoff" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Bonjour @Session["UserName"].ToString()</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:document.getElementsById('logoff').submit">Se Déconnecter</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="#">Se connecter</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">S'inscrire</a>
        </li>
    </ul>
}