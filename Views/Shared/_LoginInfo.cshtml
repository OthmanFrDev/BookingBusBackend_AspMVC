
@if (Session["UserID"] != null)
{
    using (Html.BeginForm("logout", "Utilisateurs", FormMethod.Post, new { id = "logoff" }))
    {
        @Html.AntiForgeryToken()
    <ul class="navbar-nav">

       <a href="@Url.Action("Details", "Utilisateurs", new { id = @Session["UserID"] })" class="nav-item"><img src="~/Content/UserPic/@Session["img"]" width="40" height="40" class="rounded-circle d-none d-sm-none  d-md-none d-lg-block" /></a> 
        <li class="nav-item">
            <a href="@Url.Action("Details", "Utilisateurs", new { id = @Session["UserID"] })" class="nav-link">
                Bonjour @Session["UserName"].ToString()
            </a>
        </li>
        <li class="nav-item" style="display:inline-block">
            <a class="nav-link" href="@Url.Action("Logout","Home")">
                Se Déconnecter <i class="fas fa-sign-out-alt" style="color: #F59A2E;"></i>
            </a>
        </li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("login","Home")"><i class="fas fa-sign-in-alt" style="color: #F59A2E;"></i>Se connecter</a>
        </li>
        <li class="nav-item" style="display:inline-block">
            <a class="nav-link" href="@Url.Action("Create","Utilisateurs")" data-toggle="modal" data-target="#exampleModal"><i class="fas fa-user-plus" style="color: #F59A2E;"></i>S'inscrire</a>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header" style="text-align:center">
                            <div class="col" style="text-align:center">
                                <img src="~/Content/BookingBus.png" id="icon" alt="User Icon" />
                            </div>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="col" style="text-align:center;">
                                <h1>Vous êtes un(e) :</h1>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-lg-6 col-md-6 col-sm-6" style="text-align:center;"><a href="@Url.Action("Create","Utilisateurs",new { role="client"})" class="btn m-3" style="background-color: #F59A2E;width:70%"><i class="fas fa-user"></i>Particulier</a></div>
                                <div class="col-lg-6 col-md-6 col-sm-6" style="text-align:center;"><a href="@Url.Action("Create","Utilisateurs",new { role="societe"})" class="btn m-3" style="background-color: #F59A2E;width:70%"><i class="fas fa-building"></i>Societé</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
}
