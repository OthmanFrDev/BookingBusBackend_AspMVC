
@if (Session["UserID"] != null)
{
    using (Html.BeginForm("logout", "Utilisateurs", FormMethod.Post, new { id = "logoff" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Bonjour @Session["UserName"].ToString()</a>
                @Html.ActionLink("Bonjour "+@Session["UserName"].ToString(), "Details","Utilisateurs", new { id= @Session["UserID"] }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Se Déconnecter", "logout", "Home", "", new { @class = "nav-link" })
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            @Html.ActionLink("Se connecter", "login", "Home","",new { @class="nav-link"})
            <!--<a class="nav-link" href="#">Se connecter</a>-->
        </li>
        <li class="nav-item">
            @Html.ActionLink("S'inscrire", "Create", "Utilisateurs", "", new { @class = "nav-link" })
        </li>
    </ul>
}