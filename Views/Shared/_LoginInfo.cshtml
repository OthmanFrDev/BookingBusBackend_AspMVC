
@if (Session["UserID"] != null)
{
    using (Html.BeginForm("logout", "Utilisateurs", FormMethod.Post, new { id = "logoff" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav">
            <li class="nav-item">
               
                
                @Html.ActionLink("Bonjour " + @Session["UserName"].ToString(), "Details", "Utilisateurs", new { id = @Session["UserID"] }, new { @class = "nav-link" })
            </li>
            <li class="nav-item" style="display:inline-block">
                <a class="nav-link" href="@Url.Action("logout","Home")">
                    Se Déconnecter <i class="fas fa-sign-out-alt" style="color: #F59A2E;"></i>
                </a>
                    
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("login","Home")"><i class="fas fa-sign-in-alt" style="color: #F59A2E;"></i>Se connecter</a>
        </li>
        <li class="nav-item" style="display:inline-block">
            <a class="nav-link" href="@Url.Action("Create","Utilisateurs    ")"><i class="fas fa-user-plus" style="color: #F59A2E;"></i>S'inscrire</a>
        </li>
    </ul>
}