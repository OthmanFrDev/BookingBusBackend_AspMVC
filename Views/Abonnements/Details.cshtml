    <div id="formContent">
        <dl class="dl-horizontal" style="padding:5px;">
            <dt class="badge badge-warning p-2 h4" style="width:25%;height:auto">
                @Html.DisplayNameFor(model => model.date_debut)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.date_debut)
            </dd>

            <dt class="badge badge-warning p-2 h4" style="width:25%;height:auto">
